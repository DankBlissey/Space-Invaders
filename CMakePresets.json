{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "common-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "inherits": "common-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "mac-base",
            "hidden": true,
            "inherits": "common-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName",
                "rhs": "Darwin"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "mac-debug",
            "displayName": "MAC Debug",
            "inherits": "mac-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mac-release",
            "displayName": "MAC Release",
            "inherits": "mac-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug",
            "description": "Build Linux Debug preset"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release",
            "description": "Build Linux Release preset"
        },
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug",
            "description": "Build Windows Debug preset"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release",
            "description": "Build Windows Release preset"
        },
        {
            "name": "mac-debug",
            "configurePreset": "mac-debug",
            "description": "Build MacOS Debug preset"
        },
        {
            "name": "mac-release",
            "configurePreset": "mac-release",
            "description": "Build MacOS Release preset"
        }
    ]
}
